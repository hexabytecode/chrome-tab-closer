{
  "manifest_version": 3,
  "name": "Auto Close Tab",
  "version": "1.0",
  "description": "Close a specific tab or the whole Chrome window at a specified time.",
  "permissions": ["tabs", "activeTab", "background", "alarms"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
